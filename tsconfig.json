{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "BackEnd/src",
    "baseUrl": "BackEnd/src",
    "moduleResolution": "node"
  },
  "include": ["BackEnd/src/**/*"],
  "exclude": ["node_modules", "dist"]
}